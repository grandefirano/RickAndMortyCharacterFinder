<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/get_schwifty</item>
        <item name="android:textSize">30sp</item>

        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:shadowColor">@color/colorShadow</item>
        <item name="android:shadowRadius">20</item>

    </style>

</resources>